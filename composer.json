{
	"name": "chayson/revolux",
	"description": "A Modern, Modular, and Multipurpose Professional WordPress Theme for the Trades Industries.",
	"type": "wordpress-theme",
	"version": "0.2.0",
	"license": "GPL-2.0-or-later",
	"autoload": {
		"psr-4": {
			"Revolux\\Core\\": "inc/Core/"
		}
	},
	"authors": [
		{
			"name": "Chayson",
			"email": "dev@chayson.com"
		}
	],
	"require-dev": {
		"squizlabs/php_codesniffer": "^3.13.4",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.1.2",
		"wp-coding-standards/wpcs": "^3.2.0",
		"phpunit/phpunit": "^11.5",
		"elementor/elementor-editor-testing": "0.0.4",
		"yoast/phpunit-polyfills": "^3.1.2",
		"phpcompatibility/phpcompatibility-wp": "^2.1.8",
		"wp-cli/wp-cli-bundle": "^2.11.0"
	},
	"require": {
		"elementor/wp-notifications-package": "1.2.0",
		"composer/installers": "^2.0.0"
	},
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		},
		"sort-packages": true
	},
	"scripts": {
		"lint": "phpcs --extensions=php --standard=./phpcs.xml --ignore=node_modules,vendor,assets,tmp -p .",
		"lint:fix": "vendor/bin/phpcf --extensions=php --standard=./phpcs.xml --ignore=node_modules,vendor,assets,tmp .",
		"test": "phpunit --testsuite revolux",
		"test:install": "bash ./bin/install-wp-tests-local.sh",
		"report": "phpcs --report=info",
		"pot": "wp i18n make-pot . languages/revolux.pot --exclude=node_modules,vendor,assets --allow-root"
	}
}
